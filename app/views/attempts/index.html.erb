<h2 style="text-align: center;">Evaluations</h2>
<div class="container"><br><br><br>
  <% @evaluations.each do |evaluation| %>
    <div class="col-md-12">
      <div style="text-align: center;" class="col-md-6">
        <%= evaluation.name.upcase %>
      </div>
      <div style="text-align: center;" class="col-md-6">
        <%= link_to "Start the evaluation", evaluation_attempt_path(evaluation_id: evaluation.id), class: "btn btn-raised btn-info" %>
      </div>
    </div>
    <br><br><br>
  <% end -%>
</div>