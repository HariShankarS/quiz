<h2 style="text-align: center;">Evaluations</h2>
<div class="container">
  <% @evaluations.each do |evaluation| %>
    <div class="col-md-12">
      <div style="text-align: center;" class="col-md-6">
        <%= evaluation.name.upcase %>
      </div>
      <div style="text-align: center;" class="col-md-6">
        <% unless current_user.attempted_evaluations.include?(evaluation.id) %>
          <%= link_to "Start the evaluation" , evaluation_attempt_path(evaluation_id: evaluation.id), class: "btn btn-info", data: { no_turbolink: true } %>
        <% end -%>
      </div>
    </div>
  <% end -%>
</div>